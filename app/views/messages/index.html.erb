<div class="panel panel-default">
  <div class="panel-heading">
      メッセージ一覧
  </div>
  <div class="panel-body">
    <% @messages.each do |message| %>
    <span class="label label-info"><%= message.name %></span>
    <%= message.body %>
    <br>
    <% end %>
  </div>
</div>

<%= form_for(Message.new) do |f| %>
    <div class="form-group">
        <div class="row">
            <label class="col-lg-1 control-label">名前：</label>
            <div class="col-lg-6">
                <%= f.text_field :name, size: 40, maxlength: 20, class: "form-control" %>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <label class="col-lg-1 control-label">内容：</label>
            <div class="col-lg-11">
                <%= f.text_area :body, size: "40x10", class: "form-control" %>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-lg-offset-1 col-lg-2">
            <%= f.submit class: "btn btn-sm btn-primary" %>
        </div>
    </div>
<% end %>